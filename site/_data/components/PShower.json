    {
      "name": "Root",
      "id": "R",
      "description": "Root radius",
      "optional": false,
      "type": "CircleParameter"
    },
    {
      "name": "Crown",
      "id": "C",
      "description": "Crown radius",
      "optional": false,
      "type": "CircleParameter"
    },
    {
      "name": "Spacing",
      "id": "S",
      "description": "Spacing radius",
      "optional": false,
      "type": "CircleParameter"
    },
    {
      "name": "Color",
      "id": "C",
      "description": "The species color of each plant",
      "optional": false,
      "type": "ColourParameter"
    },
    {
      "name": "Label",
      "id": "T",
      "description": "The species label of each plant",
      "optional": false,
      "type": "TextParameter"
    }
  ]
