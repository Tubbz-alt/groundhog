{
  "name": "Plant Appearance",
  "nickname": "Shower",
  "icon": "icon_pshower.png",
  "description": "Simulate the appearance of a particular plant instance",
  "category": "Groundhog",
  "subcategory": "Flora",
  "inputs": [
    {
      "name": "Plants",
      "id": "P",
      "description": "The plant attributes to simulate",
      "optional": false,
      "type": "GenericParameter"
    },
    {
      "name": "Locations",
      "id": "L",
      "description": "The locations to assign to each attribute",
      "optional": false,
      "type": "PointParameter"
    },
    {
      "name": "Times",
      "id": "T",
      "description": "The time (in years) since initial planting to display",
      "optional": true,
      "type": "NumberParameter"
